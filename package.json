    "compatibility": "^1.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-angular": "15.0.0",
    "eslint": "8.3.0",
    "eslint-config-nodebb": "0.1.1",
    "eslint-plugin-import": "2.25.3",
    "husky": "7.0.4",
    "lint-staged": "12.1.2"
